{
    "manifest_version": 3,
    "name": "RestoreTab",
    "description": "Keep track of your Chrome sessions and restore tabs from a crash, Incognito included. All locally.",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage"
    ],
    "icons": {
        "512": "images/favicon/orangeR.png"
    }
}